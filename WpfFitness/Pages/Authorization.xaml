<Page x:Class="WpfFitness.Pages.Authorization"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WpfFitness.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Authorization">

    <Grid>
        <StackPanel Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBox x:Name="login" Height="30" Width="200" Margin="0 0 0 0"/>
            <PasswordBox x:Name="parol" Height="30" Width="200" Margin="0 10 0 0"/>
            <Button Height="30"  Width="200" Content="Авторизоваться" FontSize="17" Margin="0 10 0 0" Click="btnAut"/>
        </StackPanel>
    </Grid>
</Page>
